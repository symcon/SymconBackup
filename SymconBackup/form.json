{
    "elements": [
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "Select",
                    "caption": "Connection Type",
                    "name": "ConnectionType",
                    "options": [
                        {
                            "caption": "SFTP",
                            "value": "SFTP"
                        },
                        {
                            "caption": "FTP",
                            "value": "FTP"
                        },
                        {
                            "caption": "FTPS",
                            "value": "FTPS"
                        }
                    ],
                    "onChange": "SB_UIChangePort($id, $ConnectionType);" 
                },
                {
                    "type": "ValidationTextBox",
                    "name": "Host",
                    "caption": "Host"
                },
                {
                    "type": "NumberSpinner",
                    "name": "Port",
                    "caption": "Port",
                    "minimum": 0
                }
            ]
        },
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "ValidationTextBox",
                    "name": "Username",
                    "caption": "Username"
                },
                {
                    "type": "PasswordTextBox",
                    "name": "Password",
                    "caption": "Password"
                }
            ]
        },
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "Select",
                    "name": "Mode",
                    "caption": "Mode",
                    "options": [
                        {
                            "caption": "Full Backup",
                            "value": "FullBackup"
                        },
                        {
                            "caption": "Incremental Backup",
                            "value": "IncrementalBackup"
                        }
                    ]
                },
                {
                    "type": "ValidationTextBox",
                    "name": "TargetDir",
                    "caption": "Target Directory"
                }
            ]
        },
        {
            "type": "CheckBox",
            "caption": "Enable Timer",
            "name": "EnableTimer",
            "onChange": "SB_UIEnableTimer($id, $EnableTimer);"
        },
        {
            "type": "SelectTime",
            "name": "DailyUpdateTime",
            "caption": "Daily Update Time",
            "visible": false
        },
        {
            "type": "ExpansionPanel",
            "caption": "Expert options",
            "items": [
                {
                    "type": "List",
                    "name": "FilterDirectory",
                    "caption": "Filter Directory",
                    "add": true,
                    "delete": true,
                    "columns": [
                        {
                            "caption": "Directory",
                            "name": "Directory",
                            "width": "auto",
                            "add": "",
                            "edit": {
                                "type": "ValidationTextBox"
                            }
                        }
                    ]
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "ProgressBar",
            "name": "Progress",
            "indeterminate": true,
            "caption": "Laden...",
            "visible": false
        },
        {
            "type": "Button",
            "caption": "Create Backup",
            "onClick": "SB_CreateBackup($id);"
        }
    ],
    "status": [
        {
            "code": 201,
            "icon": "error",
            "caption": "Username/Password is invalid"
        },
        {
            "code": 202,
            "icon": "error",
            "caption": "Target Directory is invalid"
        }
    ]
}