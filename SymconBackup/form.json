{
    "elements": [
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "Select",
                    "caption": "Connection Type",
                    "name": "ConnectionType",
                    "options": [
                        {
                            "caption": "SFTP",
                            "value": "SFTP"
                        },
                        {
                            "caption": "FTP",
                            "value": "FTP"
                        },
                        {
                            "caption": "FTPS",
                            "value": "FTPS"
                        }
                    ],
                    "onChange": "SB_UIChangePort($id, $ConnectionType);"
                },
                {
                    "type": "ValidationTextBox",
                    "name": "Host",
                    "caption": "Host"
                },
                {
                    "type": "NumberSpinner",
                    "name": "Port",
                    "caption": "Port",
                    "minimum": 0
                }
            ]
        },
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "ValidationTextBox",
                    "name": "Username",
                    "caption": "Username"
                },
                {
                    "type": "PasswordTextBox",
                    "name": "Password",
                    "caption": "Password"
                }
            ]
        },
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "Select",
                    "name": "Mode",
                    "caption": "Mode",
                    "options": [
                        {
                            "caption": "Full Backup",
                            "value": "FullBackup"
                        },
                        {
                            "caption": "Incremental Backup",
                            "value": "IncrementalBackup"
                        }
                    ]
                },
                {
                    "type": "ValidationTextBox",
                    "name": "TargetDir",
                    "caption": "Target Directory",
                    "value": ""
                },
                {
                    "type": "PopupButton",
                    "caption": "Select directory",
                    "onClick": "SB_UISelectDir($id, $Host, $Port, $Username, $Password);",
                    "popup": {
                        "buttons": [
                            {
                                "type": "Button",
                                "caption": "Assume",
                                "onClick": [
                                    "SB_UIAssumeDir(",
                                    "$id, ",
                                    "isset($SelectTargetDirectory['SelectedDirectory']) ? $CurrentDir.'/'.$SelectTargetDirectory['SelectedDirectory'] : $CurrentDir,",
                                    "$Host,",
                                    "$Port, ",
                                    "$Username,",
                                    " $Password",
                                    ");"
                                ]
                            }
                        ],
                        "items": [
                            {
                                "type": "ValidationTextBox",
                                "name": "CurrentDir",
                                "caption": "Current Directory",
                                "value": "",
                                "enabled": false
                            },
                            {
                                "type": "List",
                                "name": "SelectTargetDirectory",
                                "caption": "Select Target Directory",
                                "columns": [
                                    {
                                        "caption": "Directory",
                                        "name": "SelectedDirectory",
                                        "width": "auto",
                                        "add": 0,
                                        "confirm": "Go into this Directory?"
                                    },
                                    {
                                        "onClick": "SB_UIGoDeeper($id,$CurrentDir.'/'.$SelectTargetDirectory['SelectedDirectory'],$Host, $Port, $Username, $Password);",
                                        "caption": "Go into",
                                        "name": "DeeperDir",
                                        "width": "75px",
                                        "add": 0
                                    }
                                ],
                                "values": []
                            }
                        ],
                        "caption": "Select the target directory"
                    }
                }
            ]
        },
        {
            "type": "CheckBox",
            "caption": "Enable Timer",
            "name": "EnableTimer",
            "onChange": "SB_UIEnableTimer($id, $EnableTimer);"
        },
        {
            "type": "SelectTime",
            "name": "DailyUpdateTime",
            "caption": "Daily at",
            "visible": false
        },
        {
            "type": "ExpansionPanel",
            "caption": "Expert options",
            "items": [
                {
                    "type": "NumberSpinner",
                    "minimum": 1,
                    "name": "SizeLimit",
                    "caption": "Size Limit",
                    "suffix": "MB"
                },
                {
                    "type": "List",
                    "name": "FilterDirectory",
                    "caption": "Filter Directory",
                    "add": true,
                    "delete": true,
                    "columns": [
                        {
                            "caption": "Directory",
                            "name": "Directory",
                            "width": "auto",
                            "add": "",
                            "edit": {
                                "type": "ValidationTextBox"
                            }
                        }
                    ]
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "PopupAlert",
            "name": "ProgressAlert",
            "visible": false,
            "popup": {
                "closeCaption": "Ok",
                "items": [
                    {
                        "type": "Label",
                        "name": "InformationLabel",
                        "caption": "",
                        "visible": true
                    },
                    {
                        "type": "ProgressBar",
                        "name": "Progress",
                        "indeterminate": true,
                        "caption": "Laden...",
                        "visible": true
                    }
                ]
            }
        },
        {
            "type": "Button",
            "caption": "Create Backup",
            "onClick": "SB_CreateBackup($id);"
        },
        {
            "type": "Button",
            "caption": "Test Connection",
            "onClick": "SB_UITestConnection($id);"
        }
    ],
    "status": [
        {
            "code": 201,
            "icon": "error",
            "caption": "Username/Password is invalid"
        },
        {
            "code": 202,
            "icon": "error",
            "caption": "Target Directory is invalid"
        },
        {
            "code": 203,
            "icon": "error",
            "caption": "Host/Port is invalid"
        }
    ]
}